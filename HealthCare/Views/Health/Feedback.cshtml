
@{
    //Layout = null;
}
<style>
    * {
        box-sizing: border-box;
    }

    input[type=text], select, textarea {
        width: 100%;
        padding: 12px;
        border: 1px solid #ccc;
        border-radius: 4px;
        resize: vertical;
    }

    label {
        padding: 12px 12px 12px 0;
        display: inline-block;
    }

    input[type=submit] {
        background-color: blue;
        color: white;
        padding: 12px 20px;
        border: none;
        border-radius: 50px;
        cursor: pointer;
        float: right;
        
        width: 300px;
    }

        input[type=submit]:hover {
            /*background-color: orangered;*/
            transition-duration: 5s;
        }

    .container {
        margin-top: 50px;
        border-radius: 40px;
        background-color: #f2f2f2;
        padding: 20px;
        box-shadow: 0px 0px 30px 0px antiquewhite;
    }

    .col-25 {
        float: left;
        width: 25%;
        margin-top: 6px;
    }

    .col-75 {
        float: left;
        width: 75%;
        margin-top: 6px;
        /*font-family: Candara;*/
        font-weight: bold;
    }

    /* Clear floats after the columns */
    .row:after {
        content: "";
        display: table;
        clear: both;
    }

    @@media screen and (max-width: 600px) {
        .col-25, .col-75, input[type=submit] {
            width: 100%;
            margin-top: 0;
        }
    }

    .pha_pro {
        margin-top: 15px;
        margin-bottom: 20px;
    }

    #ourpro {
        font-size: 35px;
        color: goldenrod;
    }

        #ourpro:hover {
            color: mediumorchid;
            transition-duration: 5s;
        }
    .down {
        margin-bottom: 50px;
    }
    .warning {
        text-align: center;
        font-size: 30px;
        background-color: darkgoldenrod;
    }
    #Message {
        height: 150px;
    }
</style>



<body>
    <div class="container down">
        <center>
            @if (ViewBag.Yes == '1')
            {
                <div class="warning" id="warningLabel">
                    <label>Send Successfully</label>
                </div>
            }
        </center>

        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <div class=" animated flipInX pha_pro">
                    <center>
                        <i class="fas fa-star" id="ourpro"></i>
                        <i class="fas fa-star" id="ourpro"></i>
                        <i class="fas fa-star" id="ourpro"></i>
                        <i class="fas fa-star" id="ourpro"></i>
                        <i class="fas fa-star" id="ourpro"></i>
                    </center>
                </div>
                <form action="Feedback" method="POST">
                    
                    
                    <div class="row">
                        <div class="col-25">
                            <label for="inputName">Name</label>
                        </div>
                        <div class="col-75">
                            <input type="text" class="form-control" id="inputName" placeholder="Name" name="Name" required="">

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-25">
                            <label for="inputEmail">Email</label>
                        </div>
                        <div class="col-75">
                            <input type="text" id="inputEmail" class="form-control" placeholder="abc@gmail.com" name="Email" required="">

                        </div>
                    </div>

                    <div class="row">
                        <div class="col-25">
                            <label>Services:</label>
                        </div>
                        <div class="col-75">
                            <input type="radio" id="male" name="Review" value="1">
                            <label for="male">Good</label><br>
                            <input type="radio" id="female" name="Review" value="2">
                            <label for="female">Average</label><br>
                            <input type="radio" id="other" name="Review" value="3">
                            <label for="other">Bad</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-25">
                            <label for="Message">Message</label>
                        </div>
                        <div class="col-75">
                            <textarea id="Message" class="form-control" placeholder="Message...." name="Message"></textarea>

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-25"></div>
                        <div class="col-75" style="margin-top: 30px;">
                            <input type="submit" value="Submit">
                        </div>

                    </div>
                </form>
            </div>
            <div class="col-md-2"></div>
        </div>

    </div>
</body>
@section scripts
{


    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script>


        $(document).ready(function () {
            setTimeout(function () {
                $("#warningLabel").hide(1000).empty();
            }, 5000);


        });


    </script>
}
