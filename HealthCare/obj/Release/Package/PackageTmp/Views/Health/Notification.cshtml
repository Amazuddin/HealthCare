@using HealthCare.Models

@{
    //Layout = null;
    var i = 1;
}
<link href="~/Content/DataTables/css/dataTables.bootstrap.css" rel="stylesheet" />
<link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" />
<style>
    .dtable {
        margin: 100px 50px 80px 50px;
    }
    .accepted {
        background-color: #28a745;
        color: white;
        text-align: center;
        /*padding-top: 12px;*/
    }

    .pending {
        background-color: orangered;
        color: white;
        text-align: center;
        /*padding-top: 12px;*/
    }
</style>
<body>
    <div class="dtable">
        <table id="informationtable" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th class="th-sm">Serial No</th>
                    <th class="th-sm">Date</th>
                    <th class="th-sm"> Doctor Name </th>
                    <th class="th-sm"> Specialist</th>
                    <th class="th-sm">Request</th>


                </tr>
            </thead>
            <tbody>
                @foreach (DoctorAppointmentView d in Model)
                {

                    <tr>
                        <td>@i</td>
                        <td>@d.Date</td>
                        <td>@d.DoctorName</td>
                        <td>@d.Specialist</td>
                        @if (d.Approval == 0)
                        {
                            <td class="pending">Pending</td>
                        }
                        else if (d.Approval == 1)
                        {
                            <td class="accepted">Accpted</td>
                        }
                    </tr>
                        i = i + 1;
                }
            </tbody>
        </table>

    </div>
</body>
@section scripts
{

    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            var table = $('#informationtable').DataTable();
        });
    </script>
}