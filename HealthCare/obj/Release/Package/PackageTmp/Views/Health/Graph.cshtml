@section scripts
{
    <script src="~/Scripts/Chart.min.js"></script>
    <script>
        var dat = [0, 0, 0];
        dat = JSON.parse('@ViewBag.Data');
        
        var data = {
            datasets: [
            {
                data: dat,
                backgroundColor: [
                    'rgba(0, 128, 0, 0.5)',
                    'rgba(255, 69, 0, 0.5)',
                    'rgba(255, 0, 0, 0.5)'
            ]
        }],
        labels: [
            'Good',
            'Average',
            'Bad'
        ]
    };
    $(document).ready(function () {
        var ara = new Array;
        var db = document.getElementById('myDoughnutChart');
        var myDoughnutChart = new Chart(db, {
            type: 'doughnut',
            data: data
            
        });

        
        
    });

    </script>
}







